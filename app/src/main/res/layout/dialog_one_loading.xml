<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl1_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/space_150"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_a0000000_5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_5"
        android:paddingTop="@dimen/space_10"
        android:paddingRight="@dimen/space_5"
        android:paddingBottom="@dimen/space_10">

        <ProgressBar
            android:layout_width="@dimen/space_35"
            android:layout_height="@dimen/space_35"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_10"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/loading"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/tipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_10"
            android:layout_marginTop="@dimen/space_15"
            android:layout_marginBottom="@dimen/space_8"
            android:text="@string/dialog23"
            android:textColor="#f0f0f0"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</RelativeLayout>